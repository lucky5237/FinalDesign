<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_topic_gray"
    android:orientation="vertical">

    <RelativeLayout style="@style/topbar_layout_style">

        <ImageView
            android:id="@+id/iv_back"
            style="@style/topbar_back_img_style" />

        <TextView
            style="@style/topbar_text_style"
            android:text="注册" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/margin_large"
        android:layout_weight="1"
        android:orientation="vertical">

        <View style="@style/divider_style" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/color_white"
            android:orientation="horizontal">


            <TextView
                style="@style/login_textview_style"
                android:text="手机号"

                />

            <EditText
                android:id="@+id/et_mobile"
                style="@style/login_editText_style"
                android:focusable="true"
                android:hint="请输入手机号"
                android:inputType="phone"
                android:maxLength="11" />
        </LinearLayout>

        <View style="@style/divider_style" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/color_white"
            android:orientation="horizontal">


            <TextView
                style="@style/login_textview_style"
                android:text="验证码"

                />

            <EditText
                android:id="@+id/et_captcha"
                style="@style/login_editText_style"
                android:hint="请输入验证码"
                android:inputType="number"
                android:maxLength="6" />

            <Button
                android:id="@+id/btn_captcha"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/index_login"
                android:text="获取验证码"
                android:textColor="@color/color_white" />

        </LinearLayout>

        <View style="@style/divider_style" />

        <Button
            android:id="@+id/btn_next"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/login_confirm_blue"
            android:gravity="center"
            android:text="下一步"
            android:textColor="@color/color_white"
            android:textSize="@dimen/normal_textsize" />


    </LinearLayout>


</LinearLayout>