<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/no_relation_goods"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible" >

    <ImageView
        android:id="@+id/iv_tip_pictrue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:src="@mipmap/sorry" />

    <TextView
        android:text="暂无商品"
        android:id="@+id/tv_show_relation_content"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_below="@id/iv_tip_pictrue"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textColor="@color/gray_show"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btn_again_load_food"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@id/tv_show_relation_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_back_home_shape"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:text="点击重新加载"
        android:textColor="@color/white" />

</RelativeLayout>